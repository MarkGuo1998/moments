<%- include("header",{type:'friendslist'}) %>

	<div class="container">
		<ul class="posts">
			<% posts.forEach(function(res){ %>
				<li>
					<div class="friendname">
						<span title="<%= res.name %>"><a href="/moments?author=<%= res.name %> ">好友名：<%= res.name %></a></span>
					</div>
                    <span class="cmt_name">
                        <a class="delete_comment" href="javascript:delete_request(<%= res['rid'] %>);"> 删除</a>
				    </span>
				</li>
			<% }) %>
		</ul>
		<div style="margin-top: 30px" class="pagination" id="page"></div>	
	</div>


    <script>
		$(window).keyup(function (e) {
			//console.log(e.keyCode)
			if (e.keyCode == 13) {
				$('.submit').click()
			}
		})
        
        // 删除好友请求
		function delete_request(id, isaccept) {
			$.ajax({
				url: "/acceptfriends/" + id + "/remove",
                data: {
                    rid: id
                },
				type: 'POST',
				cache: false,
                dataType: 'json',
				success: function (msg) {
					if (msg.data == 1) {
						fade('删除请求成功')
						setTimeout(() => {
							window.location.reload()
						}, 1000)
					} else if (msg.data == 2) {
						fade('删除请求失败');
						setTimeout(() => {
							window.location.reload()
						}, 1500)
					}
				},
				error: function () {
					alert('删除请求异常')
				}
			})
		}
        
	</script>
<% include footer %>