<%- include("header",{type:'my'}) %>
	<div class="container">
		<ul class="posts">
			<% posts.forEach(function(res){ %>
				<li>
					<div class="author">
						<span title="<%= res.name %>"><a href="/moments?author=<%= res.name %> ">作者：<%= res.name %></a></span>
					</div>
					<div class="comment_pv">
						<span><%= res.moment %></span>
					</div>
					<a href="/posts/<%= res.id %>">
						<div class="content markdown">
							<%- res.content %>
						</div>
					</a>
				</li>
			<% }) %>
		</ul>
		<div style="margin-top: 30px" class="pagination" id="page"></div>	
	</div>

	<script>
        $.ajax({
            url: "self/page",
            type: 'POST',
            data:{
					page: 0
				},
            cache: false,
            success: function (msg) {
				//console.log(msg)
				if (msg != 'error') {
					$('.posts').html(' ')
					$.each(msg,function(i,val){
						//console.log(val.content)
						$('.posts').append(
							'<li>'+
				            '<div class=\"author\">'+
				            '<span title=\"'+ val.name +'\"><a href=\"/posts?author='+ val.name +' \">author: '+ val.name +'</a></span>'+
				            //'<span>评论数：'+ val.comments +'</span>'+
				            //'<span>浏览量：'+ val.pv +'</span>'+
				            '</div>'+
				            '<span>'+ val.moment +'</span>'+
				            '</div>'+
				            '<a href=\"/moments/'+ val.id +'\">'+
				            '<div class=\"title\">'+
				            val.title +
				            '</div>'+
				            '<div class=\"content\">'+
				            val.content +
				            '</div>'+
				            '</a>'+
				            '</li>'
							)
						})
					}else{
						alert('分页不存在')
					} 
				}
        })
	</script>
<% include footer %>